@model IEnumerable<ConferenceManagementSystem.Models.Entities.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Role List</h6>
    </div>
    <div class="card-header py-3">
        <a href="/Role/Create" class="btn btn-primary">Create Role</a>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Description</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleName</td>
                            <td>@item.Description</td>
                            <td width="12%">
                                <a href="/Action/ActionList?roleId=@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fa fa-list-ul text-white" aria-hidden="true"></i>

                                </a>
                                <a href="/Role/Delete?roleId=@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash text-white" aria-hidden="true"></i>
                                </a>
                                <a href="/Role/Update?roleId=@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fa fa-wrench text-white" aria-hidden="true"></i>

                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
