    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var message = '@(TempData["Error"]==null?null: TempData["Error"].ToString())';
            if (message != null && message!="") {
                toastr.error(message);
            }

        });
        $.ajax({
            url: '/Notification/GetNotifications',
            type: 'GET',
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            contentType: false,
            processData: false,
            async: false,
            success: function (data) {
                var note = "";
                var count = 0;
                if (data != null)
                {
                    $.each(data, function (index, value) {
                        if (count<3) {

                        note += '<a class="dropdown-item d-flex align-items-center" href="/Notification/Details?id='+data[index].Id+'">' +
                            '<div class="mr-3">' +
                            '<div class="icon-circle bg-primary">' +
                            '<i class="fas fa-bullhorn text-white"></i>' +
                            '</div>' +
                            '</div>' +
                            '<div>' +
                            '<div class="small text-gray-500">' + data[index].Title + '</div>' +
                            '<span class="font-weight-bold">'+data[index].Explanation+'</span>' +
                            '</div>' +
                                '</a>';
                        }

                        count++;

                    });
                    $("#note").html(note);
                    $("#count").html(count+"+");

                }
            }

        });

    </script>
    @RenderSection("scripts", false)
